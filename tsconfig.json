{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    // LANGUAGE
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true, // '"strict": true ' did not enforce this
    "noUncheckedIndexedAccess": true, // i believe `tsc init` should have done this.
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // BINARY COMPAT
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true, // WDYT ?
    "esModuleInterop": true, // WDYT ?
    "forceConsistentCasingInFileNames": true, // WDYT ?
    "skipLibCheck": true, // WDYT ?
    "outDir": "./dist",
    "noEmit": true, // WDYT ?
    
  },
  "include": [
    "src"
  ]
}
